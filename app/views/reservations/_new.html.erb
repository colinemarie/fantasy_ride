<%= simple_form_for [@vehicle, @reservation] do |f| %>
    <%= f.input :start_date, as: :date, :order => [:day, :month, :year] %>
    <%= f.input :end_date, as: :date, :order => [:day, :month, :year] %>
    <p>Total price : <span id="total-price"><%= @vehicle.price_per_day %></span> â‚¬</p>
    <% if current_user %>
      <%= f.button :submit, "Book now", class: "btn-primary rounded-btn btn-block" %>
    <% else %>
      <%= button_tag "Book now", class: "btn-primary rounded-btn btn-block", data: {toggle: "modal", target: "#logIn"} %>
    <% end %>
<% end %>
