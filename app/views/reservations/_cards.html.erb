<div class="card-trip">
  <div class="card-trip-infos">
    <div>
      <div class="d-flex justify-content-between">
        <%= link_to vehicle_path(reservation.vehicle) do %>
          <h2><%= reservation.vehicle.name %></h2>
        <% end %>
        <%= link_to cancel_reservation_path(reservation), method: :patch, data: { confirm: "You sure?"}  do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </div>
      <div class="badge badge-pill badge-primary">
        <p><%= reservation.status %></p>
      </div>
      <div class="row">
        <div class="col-8">
          <h2>From <%= reservation.start_date.to_time.strftime('%e %B') %>
            to <%= reservation.end_date.to_time.strftime('%e %B') %></h2>
        </div>
        <div class="col-4">
          <h2>total price <%= number_with_delimiter(reservation.total_price, :delimiter => ',') %>â‚¬</h2>
        </div>
      </div>
    </div>
  </div>
</div>
