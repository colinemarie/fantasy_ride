<div class="container">
  <h1 class="pl-0">My reservations</h1>

  <% if @reservations.empty? %>
    <h4>No reservation yet?</h4>
    <h4><%= link_to('Give it a try', "/vehicles") %></h4>

  <% else %>
    <div class="content">
      <div class="cards">
        <% @reservations.each do |reservation| %>
          <% if reservation.status != "cancelled" %>
            <%= render "reservations/cards", reservation: reservation %>
          <% end %>
        <% end %>
      </div>
    </div>

    <h1 class="pl-0">My cancelled reservations</h1>
      <div class="content">
        <div class="cards">
          <% @reservations.each do |reservation| %>
            <% if reservation.status == "cancelled" %>
              <div class="card-trip">
                <div class="card-trip-infos">
                  <div>
                    <%= link_to vehicle_path(reservation.vehicle) do %>
                    <h2><%= reservation.vehicle.name %></h2>
                    <% end %>
                    <div class="badge badge-pill badge-secondary">
                    <p><%= reservation.status %></p>
                    </div>
                    <div class="row">
                      <div class="col-8">
                        <h2>Planned for <%= reservation.start_date.to_time.strftime('%B %e') %></h2>
                      </div>
                      <div class="col-4">
                        <h2>total price <%= reservation.total_price %>$</h2>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
           <% end %>
          <% end %>
        </div>
      </div>

  <% end %>
  <br>
    <p><i class="fas fa-undo"></i>  <%= link_to('Back to catalog', "/vehicles") %></p>

</div>
