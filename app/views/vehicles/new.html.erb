
<div class="container">

  <%= simple_form_for(@vehicle) do |f| %>

    <div class="form-inputs">
      <%= f.input :name, required: true, autofocus: true, placeholder: 'Name of your vehicle'%>
      <!-- A FINIR JEUDI + explications compliquÃ©es de Coline avec des Save -->
      <%=  f.collection_check_boxes :categories, Category.all, :id, :name, item_label_class: 'my-custom-class'%>
      <%= f.input :price_per_day, as: :float%>
      <%= f.input :description, as: :text %>
      <%= f.input :address, as: :string %>
      <%= f.input :capacity, as: :integer %>
      <%= f.input :minimum_age, collection: 6..99 %>
      <%= f.input :photos, as: :file%>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create", class: "btn btn-primary rounded-btn", data: {user: current_user ? true : false} %>
    </div>

  <% end %>

  <%= link_to "Back", :back %>

</div>
