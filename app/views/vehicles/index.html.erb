<div class="input-group mb-3">
  <%= form_tag vehicles_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control m-3",
      placeholder: "Find a ride"
    %>
    <%= submit_tag "Search", class: "btn btn-outline-primary" %>
    <%= link_to "Remove filters", vehicles_path, class: "btn btn-outline-black" %>
  <% end %>
</div>

<div class="content">
  <div class="cards">
    <% @vehicles.each do |vehicle| %>
      <div class="card-trip">
        <% vehicle.photos.each do |photo| %>
          <%= cl_image_tag photo.key, crop: :fill %>
        <% end %>
         <%= link_to vehicle_path(vehicle) do %>
            <div class="card-trip-infos">
              <div>
                <h2><%= vehicle.name %></h2>
                <h2> <%= vehicle.price_per_day %> â‚¬ / day </h2>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
