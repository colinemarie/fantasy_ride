<div class="container">
  <h1><%= @vehicle.name %></h1>

  <div class= first-card-info>
    <div class= price-card><span id="daily-price"><%= @vehicle.price_per_day %></span> â‚¬ / day</div>
      <div class= bloc-label>
        <% @vehicle.categories.each do |category| %>
          <div class= category-label>
           <%= category.name %>
          </div>
          <% end %>
      </div>
  </div>

  <div class="d-flex p-3">
    <div class= "photo-vehicle">
      <% @vehicle.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 400, width: 600, crop: :fill, :class=>"rounded" %>
      <% end %>
    </div>
    <div class="bg-white border border-white ml-3 p-3 rounded" class= reservation-card>
      <%= render "reservations/new", vehicle: @vehicle, reservation: @reservation %>
      <br>
    </div>
   </div>
  <br>
    <div>
      <div class= description-card>
        <h2>Description</h2>
        <p><%= @vehicle.description %></p>
      </div>

      <div class= vehicle-detail-card>
        <h2>Information</h2>
        <div class= content-vehicle-detail-card>
          <p></p>
          <p>Location : <%= @vehicle.address %></p>
          <p>Capacity : <%= @vehicle.capacity %> pers.</p>
          <p>Minimum age : <%= @vehicle.minimum_age %> years old</p>
        </div>
      </div>
<br>
  <div class="notification">
    <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large" />
    <div class="notification-content">
      <p><small>Owner : <%= @vehicle.user.first_name %> <%= @vehicle.user.last_name %></small></p>
  </div>
  </div>
  <p><div class= return-link><i class="fas fa-undo"></i><%= link_to('  Retour au catalogue', "/vehicles") %></div></p>
</div>


