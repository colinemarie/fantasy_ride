
<div class="container">

  <h1><%= @vehicle.name %></h1>

    <div class="first-card-info">
    </div>

  <div class="row">
    <div class="col-md-8">
      <div>
        <% @vehicle.photos.each do |photo| %>
          <%= cl_image_tag photo.key, :class=>"radius vehicle-photo" %>
        <% end %>
      </div>
      <div class="d-flex justify-content-between align-items-center p-2 border-bottom my-3 radius">
        <div class="d-flex">
          <div><span id="daily-price"><%= @vehicle.price_per_day %> € per day</span></div>
          <div><p>&nbsp;&nbsp;·&nbsp;&nbsp;<%= @vehicle.capacity %> traveler(s) capacity</p></div>
         <!--   <div class= bloc-label p-2>
            <% @vehicle.categories.each do |category| %>
              <div class= category-label p-2>
                <%= category.name %>
              </div>
            <% end %>
          </div> -->
        </div>
        <div>
          <%= @vehicle.user.first_name %> <%= @vehicle.user.last_name %>
          <%= cl_image_tag @vehicle.user.avatar.key, :class=>"avatar"%>
        </div>
      </div>
      <div class="description-card my-3">
            <p><%= simple_format(@vehicle.description) %></p>
      </div>
      <div id="map"
        style="width: 100%; height: 400px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      <p><i class="fas fa-undo"></i>   <%= link_to('Retour au catalogue', "/vehicles") %></p>
    </div>
    <div class="col-md-4">
      <div class="bg-white border border-white sticky-top p-4 radius">
        <%= render "reservations/new", vehicle: @vehicle, reservation: @reservation %>
        <br>
      </div>
    </div>
  </div>
  </div>
</div>


