<div class="container">
  <%= link_to "Add a new vehicle", new_vehicle_path, class: "btn btn-lg btn-primary rounded-btn m-0 btn-home mt-5", id: "goldenButton" %>
  <h1> <%= @user.first_name %>, here all your vehicles</h1>
<br>
  <div class="content">
      <div class="cards">
        <% @user.vehicles.each do |vehicle| %>
          <div class="card-trip">
              <% vehicle.photos.each do |photo| %>
                <%= cl_image_tag photo.key, crop: :fill, class: "card-img" %>
              <% end %>
              <div class="badge badge-pill badge-primary category-badge">
                <p>category</p>
              </div>
             <%= link_to  my_vehicle_vehicle_reservations_path(vehicle) do %>
                <div class="card-trip-infos">
                  <div>
                    <h2><%= vehicle.name %></h2>
                    <h2> <%= vehicle.price_per_day %> â‚¬ / day </h2>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
<br>
</div>
