<div class="card-product radius m-2">

  <% reservation.vehicle.photos.each do |photo| %>
    <%= cl_image_tag photo.key %>
  <% end %>

  <div class="d-flex p-4 align-items-center">

    <div>
      <p><strong>From <%= reservation.start_date.to_time.strftime('%e %B') %> to
      <%= reservation.end_date.to_time.strftime('%e %B') %> </p></strong>
      <p>Reserved by <%= reservation.user.first_name %> </p>
      <p>Total price <%= number_with_delimiter(reservation.total_price, :delimiter => ',')%> â‚¬</p>
      <div class="badge badge-pill badge-primary">
        <p><%= reservation.status %></p>
      </div>
    </div>

    <div class="d-flex flex-column ml-3">
      <%= link_to 'Accept', accept_reservation_path(reservation), method: :patch, data: { confirm: "You sure?"}, class: "" %>
      <%= link_to 'Decline', decline_reservation_path(reservation), method: :patch, data: { confirm: "You sure?"}, class: "" %>
    </div>

  </div>
</div>



